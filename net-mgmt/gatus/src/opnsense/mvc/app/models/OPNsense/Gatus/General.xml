<model>
    <mount>//OPNsense/Gatus</mount>
    <description>Gatus configuration</description>
    <version>1.0.0</version>
    <items>
        <enabled type="BooleanField">
            <Default>0</Default>
            <Required>Y</Required>
        </enabled>
        <runas type="TextField">
            <Default>www</Default>
            <Required>Y</Required>
        </runas>
        <loglevel type="OptionField">
            <Default>info</Default>
            <Required>Y</Required>
            <OptionValues>
                <debug>debug</debug>
                <info>info</info>
                <warn>warn</warn>
                <error>error</error>
                <fatal>fatal</fatal>
            </OptionValues>
        </loglevel>
        <delaystartseconds type="IntegerField">
            <Default>0</Default>
            <Required>Y</Required>
        </delaystartseconds>
        <config type="TextField"/>
    </items>
</model>
